% Persistent sodium current, after French et al. 1990, from Gutfreund et al. 1995.
% parameters
gNaP=.025 % .0125 max sodium conductance
ENa=50
tauNaP=5
halfNaP=-40
IC_noise=0; m_IC=0
NaP_offset=0

% functions
minf(X)=1./(1+exp(-(X-(halfNaP+NaP_offset))/5))
INaP(X,m)=gNaP.*m.*(X-ENa)

% ODEs and ICs
m'=(minf(X)-m)/tauNaP
m(0)=m_IC+IC_noise*rand(1,Npop)

% linkers
@current += -INaP(X,m)

